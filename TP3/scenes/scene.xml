<lsf>
    <!-- Initials -->
    <initials>
        <reference length="1" />
        <root id="root" />
    </initials>

    <!-- Views -->
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>

        <ortho id="birdView" near="0.1" far="500" left="-75" right="75" top="75" bottom="-75">
            <from x="20" y="120" z="0" />
            <to x="0" y="0" z="0" />
            <up x="0" y="0" z="-100" />
        </ortho>
    </views>

    <!-- Illumination -->
    <illumination>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
        <background r="0.5" g="0.8" b="0.9" a="1.0" />
    </illumination>

     <!-- Lights -->
     <lights>
        <light id="firstLight">
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
    </lights>

    <!-- Textures -->
    <textures>
        <texture id="wood" path="./scenes/scene_home/wood.png"/>
        <texture id="wood_table" path="./scenes/scene_home/wood_table.jpg"/>
        <texture id="metal" path="./scenes/scene_home/metal.jpg"/>
    </textures>

    <!-- Spritesheets -->
    <spritesheets>

    </spritesheets>

    <!-- Materials -->
    <materials>
        <material id="default">
            <shininess value="0.1" />
            <ambient r="0.6" g="0.6" b="0.6" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="white">
            <shininess value="0.1" />
            <ambient r="0.9" g="0.9" b="0.9" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="green">
            <shininess value="0.2" />
            <ambient r="0.2" g="0.55" b="0.2" a="1.0" />
            <diffuse r="0.25" g="0.25" b="0.25" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="black">
            <shininess value="0.5" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="dark_gray">
            <shininess value="10"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="light_gray">
            <shininess value="10"/>
            <ambient r="0.6" g="0.6" b="0.6" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <!-- Animations -->
    <animations>

    </animations>

    <!-- Nodes -->
    <nodes>

        <!-- ROOT -->
        <node id="root">
            <material id="default"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="x" angle="-90"/>
            </transformations>

            <descendants>
                <noderef id="table"/>
            </descendants>
        </node>

        <!-- BEGIN DECORATION -->

        <!-- BEGIN TABLE -->
        <node id="table">
            <material id="default"/>

            <texture id="wood_table">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="5" topRadius="5" height="1" slices="12" stacks="4" />
                <noderef id="table_legs"/>
                <noderef id="gameBoard"/>
            </descendants>
        </node>

        <node id="table_legs">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="-5"/>
            </transformations>

            <descendants>
                <noderef id="table_leg_tl"/>
                <noderef id="table_leg_tr"/>
                <noderef id="table_leg_bl"/>
                <noderef id="table_leg_br"/>
            </descendants>
        </node>

        <node id="table_leg_tl">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="225"/>
            </transformations>

            <descendants>
                <noderef id="table_leg"/>
            </descendants>
        </node>

        <node id="table_leg_tr">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="135"/>
            </transformations>

            <descendants>
                <noderef id="table_leg"/>
            </descendants>
        </node>

        <node id="table_leg_bl">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="-45"/>
            </transformations>

            <descendants>
                <noderef id="table_leg"/>
            </descendants>
        </node>

        <node id="table_leg_br">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="45"/>
            </transformations>

            <descendants>
                <noderef id="table_leg"/>
            </descendants>
        </node>

        <node id="table_leg">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="3.5" y="0" z="0"/>
            </transformations>

            <descendants>
                <leaf type="defbarrel" base="0.3" middle="0.5" height="5" slices="10" stacks="10"/>
                <noderef id="table_leg_metal_plates"/>
            </descendants>
        </node>

        <node id="table_leg_metal_plates">
            <material id="null"/>

            <texture id="metal">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="0"/>
            </transformations>

            <descendants>
                <noderef id="table_leg_metal_plate_top"/>
                <noderef id="table_leg_metal_plate_bot"/>
            </descendants>
        </node>

        <node id="table_leg_metal_plate_top">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="4.9"/>
            </transformations>

            <descendants>
                <noderef id="table_leg_metal_plate"/>
            </descendants>
        </node>

        <node id="table_leg_metal_plate_bot">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="table_leg_metal_plate"/>
            </descendants>
        </node>

        <node id="table_leg_metal_plate">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <leaf type="defbarrel" base="0.33" middle="0.33" height="0.1" slices="10" stacks="10"/>
            </descendants>
        </node>

        <!-- END TABLE -->

        <!-- END DECORATION -->

        <!-- TILES -->
        <node id="tile_odd">
            <material id="dark_gray"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="tile"/>
            </descendants>
        </node>

        <node id="tile_even">
            <material id="light_gray"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="tile"/>
            </descendants>
        </node>

        <node id="tile">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
                <noderef id="tile_border"/>
            </descendants>
        </node>

        <node id="tile_border">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="tile_border_north"/>
                <noderef id="tile_border_west"/>
                <noderef id="tile_border_south"/>
                <noderef id="tile_border_east"/>
            </descendants>
        </node>

        <node id="tile_border_north">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_west">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="90"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_south">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="180"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_east">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="-90"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_top">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0.525" y="0" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.025" y1="-0.5" x2="0.025" y2="0.5"/>
                <noderef id="tile_border_corner"/>
                <noderef id="tile_border_wall"/>
            </descendants>
        </node>

        <node id="tile_border_corner">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0" y="0.525" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.025" y1="-0.025" x2="0.025" y2="0.025"/>
                <noderef id="tile_border_corner_wall_north"/>
                <noderef id="tile_border_corner_wall_west"/>
            </descendants>
        </node>

        <node id="tile_border_corner_wall_north">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="tile_border_corner_wall"/>
            </descendants>
        </node>

        <node id="tile_border_corner_wall_west">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="90"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_corner_wall"/>
            </descendants>
        </node>

        <node id="tile_border_corner_wall">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0.025" y="0" z="-0.075"/>
                <rotation axis="y" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.075" y1="-0.025" x2="0.075" y2="0.025"/>
            </descendants>
        </node>

        <node id="tile_border_wall">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0.025" y="0" z="-0.075"/>
                <rotation axis="y" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.075" y1="-0.5" x2="0.075" y2="0.5"/>
            </descendants>
        </node>

        <!-- END TILES -->

        <!-- PIECES -->

        <node id="white_piece">
            <material id="white"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="piece"/>
            </descendants>
        </node>

        <node id="green_piece">
            <material id="green"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="piece"/>
            </descendants>
        </node>

        <node id="black_piece">
            <material id="black"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="piece"/>
            </descendants>
        </node>

        <node id="piece">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="x" angle="-90"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="0.4" topRadius="0.4" height="0.2" slices="50" stacks="5"/>
            </descendants>
        </node>

        <!-- END PIECES -->


        <!-- BEGIN BOARD -->
        
        <node id="gameBoard">
            <material id="default"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="1.175"/>
            </transformations>

            <descendants>
                <leaf type="board">
                    <pieces>
                        <piece id="white_piece"/>
                        <piece id="green_piece"/>
                        <piece id="black_piece"/>
                    </pieces>

                    <tiles>
                        <tile id="tile_odd"/>
                        <tile id="tile_even"/>
                    </tiles>
                </leaf>
            </descendants>
        </node>

        <!-- END BOARD -->
    </nodes>
</lsf>