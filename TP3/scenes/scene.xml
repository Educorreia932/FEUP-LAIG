<lsf>
    <!-- Initials -->
    <initials>
        <reference length="1" />
        <root id="root" />
    </initials>

    <!-- Views -->
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>

        <ortho id="birdView" near="0.1" far="500" left="-75" right="75" top="75" bottom="-75">
            <from x="20" y="120" z="0" />
            <to x="0" y="0" z="0" />
            <up x="0" y="0" z="-100" />
        </ortho>
    </views>

    <!-- Illumination -->
    <illumination>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
        <background r="0.5" g="0.8" b="0.9" a="1.0" />
    </illumination>

     <!-- Lights -->
     <lights>
        <light id="firstLight">
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
    </lights>

    <!-- Textures -->
    <textures>
        <texture id="wood" path="./scenes/scene_home/wood.png"/>
    </textures>

    <!-- Spritesheets -->
    <spritesheets>

    </spritesheets>

    <!-- Materials -->
    <materials>
        <material id="default">
            <shininess value="0.1" />
            <ambient r="0.6" g="0.6" b="0.6" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="w">
            <shininess value="0.1" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="g">
            <shininess value="0.2" />
            <ambient r="0.2" g="0.55" b="0.2" a="1.0" />
            <diffuse r="0.25" g="0.25" b="0.25" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="b">
            <shininess value="0.5" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="dark_gray">
            <shininess value="10"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="light_gray">
            <shininess value="10"/>
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <!-- Animations -->
    <animations>

    </animations>

    <!--
        tile_odd
        tile_even
        green_piece
        white_piece
        black_piece
        board_support
        lamp
    -->
    
    <!-- Nodes -->
    <nodes>

        <!-- ROOT -->
        <node id="root">
            <material id="default"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <!-- <leaf type="sphere" radius="1" slices="50" stacks="50"/> -->
                <noderef id="gameBoard"/>
            </descendants>
        </node>

        <!-- TILES -->
        <node id="tile_odd">
            <material id="dark_gray"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="tile"/>
            </descendants>
        </node>

        <node id="tile_even">
            <material id="light_gray"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="tile"/>
            </descendants>
        </node>

        <node id="tile">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
                <noderef id="tile_border"/>
            </descendants>
        </node>

        <node id="tile_border">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="tile_border_north"/>
                <noderef id="tile_border_west"/>
                <noderef id="tile_border_south"/>
                <noderef id="tile_border_east"/>
            </descendants>
        </node>

        <node id="tile_border_north">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_west">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="90"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_south">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="180"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_east">
            <material id="null"/>

            <texture id="wood">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="-90"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_top"/>
            </descendants>
        </node>

        <node id="tile_border_top">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0.525" y="0" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.025" y1="-0.5" x2="0.025" y2="0.5"/>
                <noderef id="tile_border_corner"/>
                <noderef id="tile_border_wall"/>
            </descendants>
        </node>

        <node id="tile_border_corner">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0" y="0.525" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.025" y1="-0.025" x2="0.025" y2="0.025"/>
                <noderef id="tile_border_corner_wall_north"/>
                <noderef id="tile_border_corner_wall_west"/>
            </descendants>
        </node>

        <node id="tile_border_corner_wall_north">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="tile_border_corner_wall"/>
            </descendants>
        </node>

        <node id="tile_border_corner_wall_west">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <rotation axis="z" angle="90"/>
            </transformations>

            <descendants>
                <noderef id="tile_border_corner_wall"/>
            </descendants>
        </node>

        <node id="tile_border_corner_wall">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0.025" y="0" z="-0.075"/>
                <rotation axis="y" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.075" y1="-0.025" x2="0.075" y2="0.025"/>
            </descendants>
        </node>

        <node id="tile_border_wall">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
                <translation x="0.025" y="0" z="-0.075"/>
                <rotation axis="y" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.075" y1="-0.5" x2="0.075" y2="0.5"/>
            </descendants>
        </node>

        <!-- END TILES -->

        <!-- PIECES -->

        <node id="white_piece">
            <material id="white"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="piece"/>
            </descendants>
        </node>

        <node id="green_piece">
            <material id="green"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="piece"/>
            </descendants>
        </node>

        <node id="black_piece">
            <material id="black"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="piece"/>
            </descendants>
        </node>

        <node id="piece">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="1" topRadius="1" height="1" slices="10" stacks="5"/>
            </descendants>
        </node>

        <!-- END PIECES -->


        <!-- BEGIN BOARD -->
        
        <node id="gameBoard">
            <material id="default"/>

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0.3" z="0"/>
            </transformations>

            <descendants>
                <leaf type="board">
                    <pieces>
                        <piece id="white_piece"/>
                        <piece id="green_piece"/>
                        <piece id="black_piece"/>
                    </pieces>

                    <tiles>
                        <tile id="tile_odd"/>
                        <tile id="tile_even"/>
                    </tiles>
                </leaf>
                <noderef id="board_bottom"/>
            </descendants>
        </node>

        <node id="board_bottom">
            <material id="null"/>

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <scale sx="16" sy="1" sz="16"/>
            </transformations>

            <descendants>
            </descendants>
        </node>

        <!-- END BOARD -->
    </nodes>
</lsf>