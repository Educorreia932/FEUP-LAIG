<lsf>
    <initials>
        <reference length="2" />
        <root id="rootTP1" />
    </initials>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="orthoCamera" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" />
        </ortho>
    </views>

    <illumination>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
        <background r="0.17058" g="0.27686" b="0.3" a="1.0" />
    </illumination>

    <lights>
        <light id="firstLight">
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0"/>
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
    </lights>

    <textures>
        <texture id="bodyR2D2Texture" path="./images/R2-D2 Body.png" />
    </textures>

    <materials>
        <material id="bodyR2D2Material">
            <shininess value="ff" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.8" g="0.8" b="0.8" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="rootTP1">
            <material id="null" />
    
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformation>
            </transformation>

            <descendants>
                <noderef id="R2-D2"/>
            </descendants>
        </node>

        <node id="R2D2">
            <material id="R2D2BodyMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformation>
                <translation x="2.0" y="0.0" z="0.0" />
            </transformation>

            <descendants>
                <noderef id="head"/>
                <noderef id="body"/>
                <noderef id="leftLeg"/>
                <noderef id="rightLeg"/>
                <noderef id="middleLeg"/>

                
            </descendants>
        </node>

        <node id="head">
            <material id="null" />
            <texture id="null" />
            <transformations></transformations>

            <descendants>
                <leaf type="sphere" radius="3.5" slices="50" stacks="50" />
            </descendants>
        </node>

        <node id="body">
            <descendants>
                <material id="null" />
                <texture id="null" />
                <transformations></transformations>

                <noderef id="bodyTop"/>
                <noderef id="bodyBottom"/>
            </descendants>
        </node>

        <node id="bodyTop">
            <leaf type="cylinder" bottomRadius="3.5" topRadius="3.5" height="10" slices="50" stacks="50" />
        </node>

        <node id="bodyBottom">
            <leaf type="cylinder" bottomRadius="3" topRadius="3.5" height="2" slices="50" stacks="50" />
        </node>

        <node id="leftLeg">
            <descendants>
                <noderef id="leftLegTop"/>
                <noderef id="leftLegBottom"/>
                <noderef id="leftFoot"/>
            </descendants>
        </node>

        <node id="leftLegTop">
            <material id="null" />
            <texture id="null" />

            <descendants>
                <node id="leftLegTopCircle">
                    <material id="null" />
                    <texture id="null" />

                    <descendants>
                        <leaf type="cylinder" bottomRadius="2" topRadius="2" height="2" slices="50" stacks="50" />
                    </descendants>
                </node>

                <node id="leftLegTopRectangle">
                    <material id="null" />
                    <texture id="null" />

                    <descendants>
                        <leaf type="cylinder" bottomRadius="1.41421" topRadius="1.41421" height="5" slices="4" stacks="50" />
                    </descendants>
                </node>
            </descendants>
        </node>

        <node id="leftLegBottom">
            <material id="null" />
            <texture id="null" />

            <descendants>
                <leaf type="cylinder" bottomRadius="0.70711" topRadius="0.70711" height="3" slices="4" stacks="50" />
            </descendants>
        </node>

        <node id="leftFoot">
            <material id="null" />
            <texture id="null" />

            <descendants>
                <leaf type="cylinder" bottomRadius="1.7678" topRadius="0.70711" height="2" slices="4" stacks="50" />
            </descendants>
        </node>

        <node id="middleLeg">
            <noderef id="middleFootSupport"/>

            <node id="middleFoot">
                <material id="null" />
                <texture id="null" />

                <descendants>
                    <leaf type="cylinder" bottomRadius="1.7678" topRadius="0.70711" height="2" slices="4" stacks="50" />
                </descendants>
            </node>
        </node>

        <node id="middleFootSupport">
            <material id="null" />
            <texture id="null" />

            <descendants>
                <leaf type="cylinder" bottomRadius="0.4" topRadius="0.4" height="1" slices="50" stacks="50" />
            </descendants>
        </node>
    </nodes>
</lsf>