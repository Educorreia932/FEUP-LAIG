<lsf>
    <initials>
        <reference length="1" />
        <root id="scene" />
    </initials>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" />
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.1" g="0.7" b="1.0" a="1.0" />
    </illumination>

    <lights>
        <light id="demoLight">
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
    </lights>

    <textures>
        <texture id="error" path="./scenes/required_textures/error_texture.png" />
    </textures>

    <spritesheets>
        <spritesheet id="man" path="./textures/man.png" sizeM="8" sizeN="8"/>
    </spritesheets>

    <materials>
        <material id="default">
            <shininess value="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <animations>
        <animation id="a1" >
            <keyframe instant="5">
                <translation x="1.0" y="2.3" z="0" />
                <rotation axis="x" angle="93" />
                <rotation axis="y" angle="0" />
                <scale sx="1.0" sy="5.0" sz="5.4" />
                <rotation axis="z" angle="-3" />
            </keyframe>
            <keyframe instant="10">
                <translation x="1.0" y="2.3" z="0" />
                <rotation axis="x" angle="93" />
                <rotation axis="y" angle="0" />
                <scale sx="1.0" sy="4.3" sz="5.4" />
                <rotation axis="z" angle="-3" />
            </keyframe>
            <keyframe instant="15">
                <translation x="1.0" y="2.3" z="0" />
                <rotation axis="x" angle="93" />
                <rotation axis="y" angle="0" />
                <scale sx="1.0" sy="2.2" sz="5.4" />
                <rotation axis="z" angle="-3" />
            </keyframe>
            <keyframe instant="20">
                <translation x="1.0" y="2.3" z="0" />
                <rotation axis="x" angle="93" />
                <rotation axis="y" angle="0" />
                <scale sx="1.0" sy="0.7" sz="5.4" />
                <rotation axis="z" angle="-3" />
            </keyframe>
        </animation>
    </animations>

    <nodes>
        <node id="scene">
            <material id="default" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="prop" />
            </descendants>
        </node>

        <node id="prop">
            <material id="default" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="-0.005" />
            </transformations>

            <descendants>
                <leaf type="spriteanim" ssid="man" duration="5" startCell="0" endCell="15" />
            </descendants>
        </node>

    </nodes>
</lsf>
